@using System.Collections.Generic;


@*@model List<Cart>*@
@model WebShop.Models.ShoppingCartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>Shopping Cart</h2>


    <h4>Your products</h4>
    <hr />
<table class="table cart-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(modelItem => Model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => Model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => Model.Quantity)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItems)
        {
         <tr>
            <td>
                <p>
                    @Html.DisplayFor(ModelItem => item.Product.Translations.SingleOrDefault().ProductName)
                </p>
            </td>
            <td>
                @Html.DisplayFor(ModelItem => item.Product.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
             <td>
                 <a asp-action="AddToCart" asp-route-id="@item.ProductId" asp-controller="ShoppingCarts" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span></a>
                 <a asp-action="RemoveFromCart" asp-route-id="@item.Product.ProductId" asp-controller="ShoppingCarts" class="btn btn-default"><span class="glyphicon glyphicon-minus"></span></a>
             </td>
             <td>
                 <div class="cart-image">
                     <img src="~/images/@Html.DisplayFor(modelItem => item.Product.ImageName)" alt="ASP.NET" class="img-responsive" />
                 </div>
             </td>             
        </tr>
        }
    </tbody>
    </Table>
    <h2>Total price</h2>
<div class="cart-total">
    <p>
        @Html.DisplayFor(modelitem => Model.CartTotal)
    </p>
    <div>
        <a asp-action="Checkout" asp-controller="ShoppingCarts" class="btn btn-default">Checkout</a> 
    </div>       
</div>
<div>
     <a asp-action="Index">Back to List</a>
</div>



        

